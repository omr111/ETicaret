@{
    Layout = null;
}
@model ETicaret.Entities.Models.Product

<html>
<head>
    <title>Ürün Resim Ekle</title>
    <link href="~/Content/dropzone/dropzone.min.css" rel="stylesheet" />
    <link href="~/Template(using)/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Template(using)/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body style="background-image: url('../../Template(using)/colorlib-wizard-16/images/body-bg.jpg');">
    


        <div class="row ml-5 mr-5">
            <div class="col-md-12 "style="margin-top: 10%;" >
                <h2 class="mb-5">Ürün Resmini Ekleyiniz</h2>
                @using (Ajax.BeginForm("AddProductPicture", new {id = Model.Id}, new AjaxOptions {HttpMethod = "POST"}, new {@class = "dropzone", @style="min-height:60%;", id = "mydropzone", enctype = "multipart/form-data"}))

                {

                }
            </div>
            <div class="col-md-12 text-right ">
                <button type="button" class="btn btn-primary" id="uploadButton">
                    <i class="fa fa-upload"></i>Yükle
                </button>
            </div>
        </div>

    <script src="~/Content/js/vendor/jquery-2.2.4.min.js"></script>
<script src="~/Content/dropzone/dropzone.min.js"></script>
<script src="~/Content/js/jquery.unobtrusive-ajax.min.js"></script>
<script>                                                
    Dropzone.autoDiscover = false;
    var dz = null;
    $(function() {
        $("#mydropzone").dropzone({
            autoProcessQueue: false,
            maxFilesize:2,// 2mb
            maxThumbnailFileSize: 2,
            maxFiles: 3, //1 adet sürükle bırak yapılabilsin.
            parallelUploads: 3,//1 adet yüklenebilsin.
            uploadMultiple: true,
            addRemoveLinks:true,
            init:function() {
                dz = this;
                $("#uploadButton").click(function () { dz.processQueue() });
            },
            dictDefaultMessage: "Buraya Resminizi Sürükleyip Bırakabilirsiniz.",
            dictRemoveFile:"Resmi Sil"
            
        });
    });
</script>
</body>
</html>

