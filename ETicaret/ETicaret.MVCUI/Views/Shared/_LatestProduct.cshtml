                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et
                            dolore
                            magna aliqua.
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <!-- single product -->
                @foreach (var modelOrderDetail in Model.OrderDetails)
                {
                    <div class="col-lg-3 col-md-6">
                    <div class="single-product">
                        <a href="/Product/Detay/@modelOrderDetail.Product_Id"><img class="img-fluid" src="/Content/img/product/p6.jpg" alt=""></a>
                        <div class="product-details">
                            <a href="/Product/Detay/@modelOrderDetail.Product_Id">
                                <h6>
                                    @modelOrderDetail.Product.Name
                                </h6>
                            </a>
                            <div class="price">
                                <h6>@modelOrderDetail.Product.Price</h6>
                                <h6 class="l-through">$210.00</h6>
